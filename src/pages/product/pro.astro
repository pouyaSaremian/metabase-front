---
import Base from "../../layouts/Base.astro";
const title = "Business Analytics Tools | Metabase";
const description =
  "Business analytics tools. Metabase provides best-in-class business analytics tools that let you leverage business intelligence, interactive dashboards, and visualize data.";
const seo = {
  title: "Business Analytics Tools | Metabase",
  description:
    "Business analytics tools. Metabase provides best-in-class business analytics tools that let you leverage business intelligence, interactive dashboards, and visualize data.",
  canonical: "/product/pro",
  og: {
    title: "Business Analytics Tools | Metabase",
    description:
      "Business analytics tools. Metabase provides best-in-class business analytics tools that let you leverage business intelligence, interactive dashboards, and visualize data.",
    image: "https://www.metabase.com/images/opengraph/metabase-pro-plan.jpg",
    url: "https://www.metabase.com/product/pro",
    type: "article",
    site_name:
      "Metabase | Open source Business Intelligence and Embedded Analytics",
  },
  twitter: {
    site: "@metabase",
    title: "Business Analytics Tools | Metabase",
    description:
      "Business analytics tools. Metabase provides best-in-class business analytics tools that let you leverage business intelligence, interactive dashboards, and visualize data.",
    card: "summary_large_image",
    image: "https://www.metabase.com/images/opengraph/metabase-pro-plan.jpg",
  },
};
---

<Base {title} {description} {seo}>
  <div class="no-overflow">
    <div class="bootstrap">
      <div class="responsive-page pro-page">
        <div class="hero-container">
          <div class="hero">
            <div id="gradient-background"></div>

            <div id="cloud-cover-left"></div>

            <div id="cloud-cover-right"></div>

            <div class="d-flex flex-column align-items-center">
              <h6>Metabase Pro</h6>
              <h1 class="fw-bold mb-5 text-center h3">
                Self-service analytics<br />on your terms
              </h1>
              <p
                class="paragraph-4 responsive neutral-40 mb-6 text-center subtitle"
              >
                The simple but powerful Metabase you love, with tighter security
                and permissions, interactive embedding, and a reasonable price
                tag.
              </p>
            </div>
            <div class="d-flex justify-content-center align-items-center gap-4">
              <a
                id="get-started-btn-home"
                class="fs-13 Button btn btn-primary rounded-3"
                href="https://store.metabase.com/checkout">Get started</a
