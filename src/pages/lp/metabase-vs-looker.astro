---
import Base from "../../layouts/Base.astro";
const title = "Metabase vs. Looker";
const description =
  "Metabase is the easier-to-use alternative to Looker that's super fast to set up. It's the business intelligence tool your team will actually like using.";
const seo = {
  title: "Metabase vs. Looker",
  description:
    "Metabase is the easier-to-use alternative to Looker that's super fast to set up. It's the business intelligence tool your team will actually like using.",
  canonical: "/lp/metabase-vs-looker",
  og: {
    title: "Metabase vs. Looker",
    description:
      "Metabase is the easier-to-use alternative to Looker that's super fast to set up. It's the business intelligence tool your team will actually like using.",
    image: "https://www.metabase.com/images/features/query-builder-og.jpg",
    url: "https://www.metabase.com/lp/metabase-vs-looker",
    type: "article",
    site_name:
      "Metabase | Open source Business Intelligence and Embedded Analytics",
  },
  twitter: {
    site: "@metabase",
    title: "Metabase vs. Looker",
    description:
      "Metabase is the easier-to-use alternative to Looker that's super fast to set up. It's the business intelligence tool your team will actually like using.",
    card: "summary_large_image",
    image: "https://www.metabase.com/images/features/query-builder-og.jpg",
  },
};
---

<Base {title} {description} {seo}>
  <div class="bootstrap">
    <div class="landing-page">
      <div class="container feature-container landing-page__hero-b">
        <div>
          <h1>Metabase vs. Looker<br />Which is right for my team?</h1>
          <p>
            Metabase is the easy-to-use business intelligence tool with a
            friendly UX that lets everyone in your team work with data.
          </p>

          <div class="d-flex justify-content-start gap-4">
            <a
              class="fs-13 Button btn btn-primary rounded-3 btn-primary"
              href="https://store.metabase.com/checkout"
            >
              Get started
            </a>

            <a
              class="fs-13 Button btn btn-primary rounded-3 btn-outline-blue"
              href="/talk-to-a-person/"
            >
              Contact us
            </a>
          </div>
        </div>

        <div class="position-relative">
          <iframe
            width="100%"
            height="315"
            src="https://www.youtube.com/embed/5sJmlkaD7UM"
            title="YouTube video player"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
