---
import Base from "../../layouts/Base.astro";
const title = "Cloud | Metabase";
const description =
  "You have a choice for hosting your Metabase. Find out how cloud-hosting is optimized for trustworthy, production-grade deployment with none of the work.";
const seo = {
  title: "Cloud | Metabase",
  description:
    "You have a choice for hosting your Metabase. Find out how cloud-hosting is optimized for trustworthy, production-grade deployment with none of the work.",
  canonical: "/cloud/",
  og: {
    title: "Cloud | Metabase",
    description:
      "You have a choice for hosting your Metabase. Find out how cloud-hosting is optimized for trustworthy, production-grade deployment with none of the work.",
    image: "https://www.metabase.com/images/cloud/metabase-cloud.jpg",
    url: "https://www.metabase.com/cloud",
    type: "article",
    site_name:
      "Metabase | Open source Business Intelligence and Embedded Analytics",
  },
  twitter: {
    site: "@metabase",
    title: "Cloud | Metabase",
    description:
      "You have a choice for hosting your Metabase. Find out how cloud-hosting is optimized for trustworthy, production-grade deployment with none of the work.",
    card: "summary_large_image",
    image: "https://www.metabase.com/images/cloud/metabase-cloud.jpg",
  },
};
